@{
    ViewData["Title"] = "Check Compatibility - Individual";
}


<!-- Check Compatibility - Individual  -->
<div class="container-xxl py-5 mt-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row g-3 my-4">
            <div class="col-8"><h4 class="mb-4">Check Compatibility - Individual</h4></div>
            <div class="col-4 text-end">  <a asp-area="" asp-controller="ViewAllResume" asp-action="ViewAllResume" class="btn btn-primary w-50">Back</a></div>
        </div>
        <hr />
        <div class="row gy-5 gx-4 mt-2">



            <div class="col-lg-4">
                <div class="card text-center" style="width: 20rem;">
                    <img src="~/img/userprofileHiresort.jpg" class="card-img-top" alt="Candidate Image">
                    <div class="card-body" id="candidateProfile">
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <h4>Compatibility in %</h4>
                <div id="progressBarInd">
                </div>

                <div id="divCGPAandIns" class="mt-3">
                </div>
                <div class="row mt-5">
                    <div class="col-lg-6 border-line-v">
                        <h4 class="text-truncate me-3"><i class="fa fa-briefcase text-primary me-2"></i>Working Experience</h4>
                        <hr />
                        <div id="experience">
                        </div>

                    </div>
                    <div class="col-lg-6">
                        <h4 class="text-truncate me-3"><i class="fa fa-list-alt text-primary me-2"></i>Education</h4>
                        <hr />
                        <div id="education">
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <h4 class="text-truncate me-3"><i class="fa fa-cogs text-primary me-2"></i>Skills</h4>
                        <hr />
                        <div id="skills">
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <h4 class="text-truncate me-3"><i class="fa fa-link text-primary me-2"></i>Links</h4>
                        <hr />
                        <div id="links">
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
