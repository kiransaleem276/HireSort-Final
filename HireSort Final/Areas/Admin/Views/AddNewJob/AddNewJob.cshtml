@{
    ViewData["Title"] = "Add New Job";
}


<!-- Add New Job  -->
<div class="container-xxl py-5 mt-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row gy-5 gx-4">
            <div class="col-lg-12">


                <div class="addjob-form">
                    <div class="row g-3 my-4">
                        <div class="col-8"><h4 class="mb-4">Add New Job Vacancy</h4></div>
                        <div class="col-4 text-end">  <a href="javascript:history.go(-1)" class="btn btn-primary w-50">Back</a></div>
                    </div>
                    <hr />
                    <form>
                        <div class="row g-3 my-4">
                            <div class="col-12 col-sm-6">
                                <input name="ClientId" value="1" type="number" class="d-none">
                                <select type="text" class="form-select" id="department" name="DepartId">
                                    <option value="0">Select Department</option>

                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Job Title" name="JobTitle">
                            </div>

                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select" name="JobType">
                                    <option selected>Job Type</option>
                                    <option>Contract</option>
                                    <option>Full-time</option>
                                    <option>Remote</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Salary" name="Salary">
                            </div>

                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Start Date" type="date" name="StartDate">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="End Date" type="date" name="EndDate">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Qualification" name="Educations">
                            </div>


                            <div class="col-12 col-sm-6">
                                <div class="input-group mb-4">

                                    <input type="text" id="tb_skills" class="form-control bg-white" placeholder="Skills" />
                                    <input type="button" value="+" id="btn_addSkills" class="input-group-text" />
                                </div>

                                <ul id='list_skills' class="tags ps-0">
                                </ul>

                                <div id="cb_skills">

                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select" name="JobShift">
                                    <option selected>Job Shift</option>
                                    <option>Day</option>
                                    <option>Afternoon</option>
                                    <option>Night</option>
                                </select>
                            </div>

                            <div class="col-12 col-sm-6">
                                <!--  <input class="form-control bg-white" placeholder="Experience">-->
                                <div class="input-group mb-3">
                                    <input class="form-control bg-white" placeholder="Experience from" name="ExperienceFrom" type="number">
                                    <span class="input-group-text">to</span>
                                    <input class="form-control" placeholder="Experience to" name="ExperienceTo"  type="number">
                                </div>
                            </div>
                            <div class="col-12">
                                <textarea class="form-control" rows="2" placeholder="Requirements" name="Requirement"></textarea>
                            </div>
                            <div class="col-12">
                                <textarea class="form-control" rows="2" placeholder="Responsibilities" name="Responsibility"></textarea>
                            </div>
                            <div class="col-12">
                                <textarea class="form-control" rows="2" placeholder="Additonal Description" name="AdditionalDesc"></textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100" type="submit">Add New Job</button>
                            </div>
                        </div>
                    </form>


                    <div class="results">
                        <h2>Form Data</h2>
                        <pre></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Add New End -->

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
@*<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>*@

<script src="~/js/AddNewJobImplementation.js"></script>

