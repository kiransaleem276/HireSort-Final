@{
    ViewData["Title"] = "Add New Job";
}


<!-- Add New Job  -->
<div class="container-xxl py-5 mt-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row gy-5 gx-4">
            <div class="col-lg-12">


                <div class="">
                    <div class="row g-3 my-4">
                        <div class="col-8"><h4 class="mb-4">Add New Job Vacancy</h4></div>
                        <div class="col-4 text-end">  <a asp-area="" asp-controller="" asp-action="" class="btn btn-primary w-50">Back</a></div>
                    </div>
                    <hr />
                    <form>
                        <div class="row g-3 my-4">
                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select">
                                    <option selected>Department</option>
                                    <option>Development (IT)</option>
                                    <option>Human Resource</option>
                                    <option>Finance</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select">
                                    <option selected>Vacancy</option>
                                    <option>Web Developer</option>
                                    <option>Associate HR</option>
                                    <option>Finance Manager</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select">
                                    <option selected>Job Type</option>
                                    <option>Contract</option>
                                    <option>Full-time</option>
                                    <option>Remote</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Qualification">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Experience">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Salary">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Responsibilities">
                            </div>
                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select">
                                    <option selected>Job Shift</option>
                                    <option>Day</option>
                                    <option>Afternoon</option>
                                    <option>Night</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Start Date" type="date">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="End Date" type="date">
                            </div>

                            <div class="col-12">
                                <textarea class="form-control" rows="5" placeholder="Additonal Description"></textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100" type="submit">Add New Job</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Add New End -->
