@{
    ViewData["Title"] = "Add New Job";
}


<!-- Add New Job  -->
<div class="container-xxl py-5 mt-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row gy-5 gx-4">
            <div class="col-lg-12">


                <div class="">
                    <div class="row g-3 my-4">
                        <div class="col-8"><h4 class="mb-4">Add New Job Vacancy</h4></div>
                        <div class="col-4 text-end">  <a href="javascript:history.go(-1)" class="btn btn-primary w-50">Back</a></div>
                    </div>
                    <hr />
                    <form>
                        <div class="row g-3 my-4">
                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select" id="department" name="department">
                                    <option value="0">Select Department</option>

                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select" id="vacancy" name="vacancy">
                                    <option value="0">Select Job Title</option>

                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select type="text" class="form-select">
                                    <option selected>Job Type</option>
                                    <option>Contract</option>
                                    <option>Full-time</option>
                                    <option>Remote</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Salary">
                            </div>

                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="Start Date" type="date">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="form-control bg-white" placeholder="End Date" type="date">
                            </div>

                            <div class="col-12 col-sm-6">
                                <div class="input-group mb-4">
                                    <input type="text" id="tb_qual" class="form-control bg-white" placeholder="Qualification" />

                                    <input type="button" value="+" id="btn_addQual" class="input-group-text" />
                                </div>
                                <ul id='list_qualification' class="tags ps-0">
                                </ul>

                            </div>

                            <div class="col-12 col-sm-6">
                                <div class="input-group mb-4">

                                    <input type="text" id="tb_skills" class="form-control bg-white" placeholder="Skills" />
                                    <input type="button" value="+" id="btn_addSkills" class="input-group-text"/>
                                    </div>

                                    <ul id='list_skills' class="tags ps-0">
                                    </ul>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <select type="text" class="form-select">
                                        <option selected>Job Shift</option>
                                        <option>Day</option>
                                        <option>Afternoon</option>
                                        <option>Night</option>
                                    </select>
                                </div>

                                <div class="col-12 col-sm-6">
                                  <!--  <input class="form-control bg-white" placeholder="Experience">-->
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control bg-white" placeholder="Experience from">
                                        <span class="input-group-text">to</span>
                                        <input type="text" class="form-control" placeholder="Experience to" >
                                    </div>
                                </div>
                                <div class="col-12">
                                    <textarea class="form-control" rows="2" placeholder="Requirements"></textarea>
                                </div>
                                <div class="col-12">
                                    <textarea class="form-control" rows="2" placeholder="Responsibilities"></textarea>
                                </div>
                                <div class="col-12">
                                    <textarea class="form-control" rows="2" placeholder="Additonal Description"></textarea>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Add New Job</button>
                                </div>
                            </div>
</form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Add New End -->

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
@*<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>*@

<script src="~/js/AddNewJobImplementation.js"></script>

